{
  "dxt_version": "0.2",
  "name": "@whop/mcp",
  "version": "0.0.26",
  "description": "The official MCP Server for the Whop API",
  "author": {
    "name": "Whop"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whopio/whopsdk-typescript.git"
  },
  "homepage": "https://github.com/whopio/whopsdk-typescript/tree/main/packages/mcp-server#readme",
  "documentation": "https://docs.whop.com/apps",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "WHOP_API_KEY": "${user_config.WHOP_API_KEY}",
        "WHOP_APP_ID": "${user_config.WHOP_APP_ID}",
        "WHOP_WEBHOOK_KEY": "${user_config.WHOP_WEBHOOK_KEY}"
      }
    }
  },
  "user_config": {
    "WHOP_API_KEY": {
      "title": "api_key",
      "description": "A company API key, company scoped JWT, app API key, or user OAuth token. You must prepend your key/token with the word 'Bearer', which will look like `Bearer ***************************`",
      "required": true,
      "type": "string"
    },
    "WHOP_APP_ID": {
      "title": "app_id",
      "description": "When using the SDK in app mode pass this parameter to allow verifying user tokens",
      "required": false,
      "type": "string"
    },
    "WHOP_WEBHOOK_KEY": {
      "title": "webhook_key",
      "description": "",
      "required": false,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
